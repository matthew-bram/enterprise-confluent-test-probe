{
  "type": "record",
  "name": "ShipmentEvent",
  "namespace": "com.fake.company.tests",
  "doc": "Shipment event schema for Avro integration testing. Used by Java teams as reference implementation.",
  "fields": [
    {"name": "eventType", "type": "string", "default": "ShipmentEvent", "doc": "Event type discriminator"},
